" configs {{{
set clipboard=unnamed "set the clipboard sync with system clipboard
set autochdir
set relativenumber number
set splitbelow
set splitright
set nocompatible
let $LANG = 'en'  "set message language
set langmenu=en   "set menu's language of gvim. no spaces beside '='
set encoding=utf-8
set backspace=2
set incsearch
set shortmess-=S
set showcmd
set ignorecase smartcase
set number
set ruler
set foldenable
set autoindent
set cindent
set shiftwidth=4 "indent length setting
set tabstop=4 "tab length setting
set softtabstop=4
set expandtab
setlocal spell spelllang=en_us
set complete+=kspell
%retab!

colorscheme desert

set history=1000
set hlsearch
set novb
set noerrorbells
set wrap
set numberwidth=4
set t_Co=256
set termguicolors
set showtabline=2
"set foldmethod=indent
let g:netrw_banner = 0
let g:netrw_liststyle = 3
let g:netrw_browse_split = 4
let g:netrw_altv = 1
let g:netrw_winsize = 25
" }}} 

" mappings{{{
noremap <Space> <Nop>
map <Space> <Leader>
nnoremap <leader>h :nohl<CR>
noremap <leader>q :q<CR>
nnoremap <leader>w :w<CR>
nnoremap <leader>rn *Ncgn

inoremap ( ()<LEFT>
inoremap [ []<LEFT>
inoremap { {}<LEFT>
inoremap ' ''<LEFT>
inoremap " ""<LEFT>
" }}} 
